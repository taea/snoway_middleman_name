%footer#footer
  .footer-inner
    .footer-column
      .logo= link_to image_tag('images/footer_logo.png', alt: 'Snoway'), '#'
      %p.copy
        = "#{content_tag :strong, 'スキーヤー・スノーボーダー'}のための"
        %br
        = "みんなでつくる#{content_tag :strong, 'スキー場'}口コミサイト"
