          %li= link_to "#{content_tag :i, nil, class: 'icon-caret-right'}スノーウェイトーク"
          %li= link_to "#{content_tag :i, nil, class: 'icon-caret-right'}Snower ランキング"
          %li= link_to "#{content_tag :i, nil, class: 'icon-caret-right'}雪山滑走記録"
      .section
        %ul.section-list
          %li= link_to "#{content_tag :i, nil, class: 'icon-caret-right'}利用規約"
