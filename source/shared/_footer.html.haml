        %li= link_to "#{content_tag :i, nil, class: 'icon-twitter-sign'}Snoway 公式Twitter", '#', target: "_blank"
        %li= link_to "#{content_tag :i, nil, class: 'icon-facebook-sign'}Facebookページ", '#', target: "_blank"
